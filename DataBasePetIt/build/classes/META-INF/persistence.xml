<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="DataBasePetIt" transaction-type="RESOURCE_LOCAL">
		<class>PetIt.Razza</class>
		<class>PetIt.Specie</class>
		<class>PetIt.AnimaleSegnalato</class>
		<class>PetIt.PosizioniRilevamentiSegnalazioni</class>
		<properties>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value=""/>
			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/petit"/>
		</properties>
	</persistence-unit>
</persistence>
